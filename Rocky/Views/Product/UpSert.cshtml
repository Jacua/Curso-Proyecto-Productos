@model Rocky.Models.ViewModels.ProductCategoryViewModel

<form method="post" enctype="multipart/form-data">

    @if (Model.Product.Id != 0)
    {
        <div class="row">
            <div class="col-md-4 offset-4">

                <img src="@WC.ImagePath@Model.Product.Image" width="60%" style="border-radius:5px; border:1px solid #bbb" />

            </div>
        </div>

    }

    <div class="row p-3">

        <div class="col-md-8">

            @if (Model.Product.Id != 0)
            {
               <input  hidden asp-for="Product.Id"/>

            }
            <div class="form-group row" >
                <div class="col-md-4">
                    <label asp-for="Product.Name"></label>
                </div>
                <div class="col-md-8">
                    <input asp-for="Product.Name" class="form-control"  />
                    <span asp-validation-for="Product.Name"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-md-4">
                    <label asp-for="Product.Price" ></label>
                </div>
                <div class="col-md-8">
                    <input asp-for="Product.Price" class="form-control"  />
                    <span asp-validation-for="Product.Price"></span>
                </div>
            </div>

            <div class="form-group row" >
                <div class="col-md-4">
                    <label asp-for="Product.Description"></label>
                </div>
                <div class="col-md-8">
                    <input asp-for="Product.Description" class="form-control"  />
                    <span asp-validation-for="Product.Description"></span>
                </div>
            </div>

            <div class="form-group row" >
                <div class="col-md-4">
                    <label asp-for="Product.CategoryId"></label>
                </div>
                <div class="col-md-8">
                   <select asp-for="Product.CategoryId" asp-items="@Model.categorySelectList" class="form-control">
                       <option disabled selected> Seleccione una Categoria</option>
                   </select>
                    <span asp-validation-for="Product.Name"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-md-4">
                    <label asp-for="Product.Image"></label>
                </div>
                <div class="col-md-8">
                    <input asp-for="Product.Name" type="file" name="files" id="uploadBox" multiple class="form-control" />
                </div>
            </div>


            <div class="form-group row">
                <div class="col-md-8 offset-4 row">
                    <br />
                    <div class="col">
                        @if (Model.Product.Id != 0)
                        {
                            <input type="submit" value="Update" asp-action="UpSert" asp-route-id="@Model.Product.Id" class="btn btn-info w-100" />
                        }
                        else
                        {
                            <input type="submit" value="Create" asp-action="UpSert" onclick="return ValidateInput()" class="btn btn-info w-100" />
                        }

                    </div>

                    <div class="col">
                        <a asp-action="Index" class="btn btn-success w-100"> Back</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts{ 

    @{ 
        <partial name="_ValidationScriptsPartial" />
    }

    <script>
        function ValidateInput() {

            if (document.querySelector("#uploadBox").value == "") {

                swal(
                    "Error!",
                    "Please seleted An Image",
                    "error"
                );

                return false;
            }

            return true;

        }
    </script>
}