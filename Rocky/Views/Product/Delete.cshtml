@model Rocky.Models.Product

<form method="post" enctype="multipart/form-data">

    <div class="row">
        <div class="col-md-4 offset-4">

            <img src="@WC.ImagePath@Model.Image" width="60%" style="border-radius:5px; border:1px solid #bbb" />

        </div>
    </div>

    <div class="row p-3">

        <div class="col-md-8">
            <input hidden asp-for="Id" />

            
            <div class="form-group row">
                <div class="col-md-4">
                    <label asp-for="Name"></label>
                </div>
                <div class="col-md-8">
                    <input disabled asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-md-4">
                    <label asp-for="Price"></label>
                </div>
                <div class="col-md-8">
                    <input disabled asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-md-4">
                    <label asp-for="Description"></label>
                </div>
                <div class="col-md-8">
                    <input disabled asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-md-8 offset-4 row">
                    <br />
                    <div class="col">
                        @if (Model.Id != 0)
                        {
                            <button type="submit" asp-action="DeletePost" asp-route-id="@Model.Id" class="btn btn-danger w-100">Delet</button>
                        }
                       
                    </div>

                    <div class="col">
                        <a asp-action="Index" class="btn btn-success w-100"> Back</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts{

    @{
        <partial name="_ValidationScriptsPartial" />
    }
}