@model IEnumerable<Rocky.Models.Category>
@{
    ViewData["Title"] = "Index";
}


<div class="container p-3">
    <div class="row">
        <div class="col-md-8">
            <h2>Category</h2>
        </div>
        <div class="col-md-4">
            <a class="btn btn-info" asp-action="create">Create Categpory</a>
        </div>
    </div>

    <div class="row">
        @if (Model.Count() != 0)
        {
            <table class="table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Display Order </th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var category in Model)
                    {
                        <tr>
                            <td>@category.Id</td>
                            <td>@category.Name</td>
                            <td>@category.DisplayOrder</td>
                            <td>
                                <a class="btn btn-info" asp-action="Edit" asp-route-id="@category.Id">Edit</a>
                                
                                <a class="btn btn-info" asp-action="Delete" asp-route-id="@category.Id">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p class="text-info">No hay datos que mostrar</p>
        }
    </div>
</div>

